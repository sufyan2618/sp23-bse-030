<header>
    <div class="ribbon">
        <i id="icon" class="fa-solid fa-phone"></i>
        <div id="phone">+92-304-111-LALS</div>
    </div>

    <div class="logo">
        <div class="delivery">
            <i id="truck" class="fa-solid fa-truck"></i>
            <div class="pak">
                <p>delivery to </p> <img
                    src="data:image/png;base64,">
            </div>
        </div>
        <div class="centre">
            LALS
        </div>
        <div class="icons">
            <div class="search-icon-container">
                <i class="fa-solid fa-magnifying-glass" id="search-toggle"></i>
                <div class="search-box" id="search-box">
                    <form action="/search" method="GET" class="search-form">
                        <input type="text" name="q" class="search-input" placeholder="Search products..." 
                               value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                        <button type="submit" class="search-button">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
            </div>
            <!-- User Menu -->
            <div class="user-menu">
                <% if (customerId) { %>
                    <div class="dropdown">
                        <i class="fa-regular fa-user dropdown-toggle"></i>
                        <div class="dropdown-content">
                            <a href="/customer/profile">My Profile</a>
                            <a href="/customer/logout">Logout</a>
                        </div>
                    </div>
                <% } else { %>
                    <div class="dropdown">
                        <i class="fa-regular fa-user dropdown-toggle"></i>
                        <div class="dropdown-content">
                            <a href="/customer/login">Login</a>
                            <a href="/customer/signup">Sign Up</a>
                        </div>
                    </div>
                <% } %>
            </div>
            <!-- Wishlist Icon - only show if logged in -->
            <% if (customerId) { %>
                <a href="/wishlist"><i class="fa-regular fa-heart"></i></a>
            <% } %>
            <a href="/cart"><i class="fa-solid fa-bag-shopping"></i></a>
        </div>
    </div>
    <div class="line"></div>
    <div class="option-bar">
        <span><a href="/">Home</a></span>
        <ul>
            <li><a href="/contact-us">Contact Us</a></li>
            <li><a href="/about-us">About Us</a></li>
            <li><a href="/chat">Live Chat</a></li>
            <li><a href="/admin/dashboard_new">Admin Panel</a></li>
        </ul>
    </div>
</header>
