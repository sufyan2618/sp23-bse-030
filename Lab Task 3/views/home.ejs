<div class="row">
    <% products.forEach(product => { %>
        <div class="col-md-4 col-lg-3 m-5">
            <div class="card">
                <img class="card-img-top" src="<%= product.picture %>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= product.title %>
                    </h5>
                    <p class="card-text">
                        <%= product.description.split(' ').slice(0, 3).join(' ') %>...
                    </p>
                    <h4 class="card-title">Price :
                        <%= product.price %> PKR
                    </h4>
                    <a href="/add-to-cart/<%= product._id %>" class="btn btn-primary">Add To Cart</a>
                    <% if (customerId) { %>
                        <button class="btn btn-outline-primary add-to-wishlist" 
                                data-product-id="<%=product._id%>">
                            Add to Wishlist
                        </button>
                    <% } %>
                </div>
            </div>
        </div>
    <% }) %>
</div>

  <script>
    document.querySelectorAll('.add-to-wishlist').forEach(button => {
        button.addEventListener('click', async function() {
            const productId = this.dataset.productId;
            try {
                const response = await fetch(`/wishlist/add/${productId}`, { 
                    method: 'POST'
                });
                if (response.ok) {
                    alert('Added to wishlist!');
                }
            } catch (error) {
                console.error('Error adding to wishlist:', error);
            }
        });
    });
    </script>